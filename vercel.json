{
    "version": 2,
    "builds": [
        {
            "src": "LawGenius/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "LawGenius/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "LawGenius.settings"
    }
}